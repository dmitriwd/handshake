<h1 id='h1Signup'>Company Signup</h1>
<br>
<br>

<div class='signup'>
   <form action="/auth/company/signup" method="POST">
      <span class='basicform'>
         <label for="username">Username</label>
         <input type="text" id="username" name="username">
      </span>
      <span class='basicform'>
         <label for="password">Password</label>
         <input type="password" id="password" name="password">
      </span>
      <span class='basicform'>
         <label for="email">Email</label>
         <input type="email" id="email" name="email">
      </span>
      <span class='basicform'>
         <label for="location">Location</label>
         <input type="location" id="location" name="location">
      </span>
      <span class='basicform'>
         <label for="address">Address</label>
         <input type="address" id="address" name="address">
      </span>

      <span class='basicform'>
         <label for="contact">Contact</label>
         <input type="contact" id="contact" name="contact">
      </span>

      <span class='basicform'>
         <label for="businessSector">Business Sector</label>
         <input type="businessSector" id="businessSector" name="businessSector">
      </span>

      <span class='basicform'>
         <label for="description">Description</label>
         <textarea row="10" cols="30" id="description" name="description"></textarea>
      </span>

      <div class='submitbutton'>
         <button class='enterButton' type="submit">Submit</button>
      </div>

   </form>
</div>