<h1 id='h1Signup'>Freelancer Signup</h1>

<br>
<br>

<div class='signup'>
   <form class='freeSignUpForm' action="/auth/freelancer/signup" method="POST">
      <span class='basicform'>
         <label for="username">Username</label>
         <input type="text" id="username" name="username">
      </span>
      <span class='basicform'>
         <label for="password">Password</label>
         <input type="password" id="password" name="password">
      </span>
      <span class='basicform'>
         <label for="email">Email</label>
         <input type="email" id="email" name="email">
      </span>
      <span class='basicform'>
         <label for="location">Location</label>
         <input type="location" id="location" name="location">
      </span>
      <span class='basicform'>
         <label for="contact">Contact</label>
         <input type="contact" id="contact" name="contact">
      </span>
      <span class='basicform'>
         <label for="description">Description</label>
         <textarea row="10" cols="30" id="description" name="description"></textarea>
      </span>
      <br>
      <div class='skills'>
         <h3>Skills</h3>
         <span class='checkbox'>
            <input type="checkbox" id="Junior Front End Developer" name="skills" value="Junior Front End Developer">
            <label for="Junior Front End Developer">Junior Front End Developer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="Front End Developer" name="skills" value="Front End Developer">
            <label for="Front End Developer">Front End Developer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="Junior Full Stack Developer" name="skills" value="Junior Full Stack Developer">
            <label for="Junior Full Stack Developer">Junior Full Stack Developer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="Full Stack Developer" name="skills" value="Full Stack Developer">
            <label for="Full Stack Developer">Full Stack Developer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="Back End Developer" name="skills" value="Back End Developer">
            <label for="Back End Developer">Back End Developer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="Junior IT Security Engnineer" name="skills" value="Junior IT Security Engnineer">
            <label for="Front End Developer">Junior IT Security Engineer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="IT Security Engineer" name="skills" value="IT Security Engineer">
            <label for="IT Security Engineer">IT Security Engineer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="Junior UX/UI Designer" name="skills" value="Junior UX/UI Designer">
            <label for="Junior UX/UI Designer"> Junior UX/UI Designer</label><br>
         </span>
         <span class='checkbox'>
            <input type="checkbox" id="UX/UI Designer" name="skills" value="UX/UI Designer">
            <label for="UX/UI Designer"> UX/UI Designer</label><br>
         </span>
      </div>

      <button class='enterButton' type="submit">Submit</button>
   </form>
</div>






{{#if errorMessage}}
<h3 style="color:red">{{errorMessage}}</h3>
{{/if}}