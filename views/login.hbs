<div class='login'>
  <div class='form'>
    <h2 class='h3login'>Freelancers Login</h2>
    <br>
    <form class='formlogin' action="/auth/freelancer/login" method="POST">
      <span>
        <label for="username">Username</label>
        <input type="text" id="username" name="username">
      </span>
      <br>
      <span>
        <label for="password">Password</label>
        <input type="password" id="password" name="password">
      </span>
      <br>
      <span>
        <button class='enterButton' type="submit">Login</button>
      </span>
    </form>
  </div>


  <div class='form'>
    <h2 class='h3login'>Companies Login</h2>
    <br>
    <form class='formlogin' action="/auth/company/login" method="POST">
      <span>
        <label for="username">Username</label>
        <input type="text" id="username" name="username">
      </span>
      <br>
      <span>
        <label for="password">Password</label>
        <input type="password" id="password" name="password">
      </span>
      <br>
      <span>
        <button class='enterButton' type="submit">Login</button>
      </span>
    </form>
  </div>
</div>
{{#if errorMessage}}
<h3 style="color:red">{{errorMessage}}</h3>
{{/if}}