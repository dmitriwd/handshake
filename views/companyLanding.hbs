<div class="page-layout">
  <h1>
    Hi, {{company.username}}
  </h1>
  <br>
  <br>

  <button class="new-project-button">
    <a class="new-project-button" href="/company/project">Create a New Project</a>
  </button>
  <br>
  <br>

  <h2>Your current projects</h2>
  <br>

  {{#each companyProjects}}
  <div class="project-box">
    <p> <strong class="title">Project name:</strong> {{name}}</p>

    <p><strong class="title">Project summary:</strong> <br> {{summary}}</p>
    {{!-- <p>Post date: {{when}}</p> --}}

    <div class="buttons-inside-project">
      <form class="create-project" action="/company/deletePost/{{_id}}" method="POST">
        <button class="create-project" type="submit" id="delete">Delete Project
        </button>
      </form>

      <button class="create-project" type="submit">
        <a class="create-project" href="/company/specProject/{{_id}}">See who applied</a>
      </button>
    </div>
  </div>
  <br>
  {{/each}}
</div>
